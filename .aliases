# ============================================================================
# Common Aliases (bash/zsh共通)
# ============================================================================

# ----------------------------------------------------------------------------
# File listing
# ----------------------------------------------------------------------------
alias ll="ls -lah"
alias la="ls -la"
alias l="ls -l"

# ----------------------------------------------------------------------------
# Directory navigation
# ----------------------------------------------------------------------------
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# ----------------------------------------------------------------------------
# Grep with color
# ----------------------------------------------------------------------------
alias grep="grep --color=auto"
alias fgrep="fgrep --color=auto"
alias egrep="egrep --color=auto"

# ----------------------------------------------------------------------------
# Laravel Sail
# ----------------------------------------------------------------------------
alias sail='sh $([ -f sail ] && echo sail || echo vendor/bin/sail)'
